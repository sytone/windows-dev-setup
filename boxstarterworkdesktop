# Configure Windows
Set-WindowsExplorerOptions -EnableShowHiddenFilesFoldersDrives -EnableShowProtectedOSFiles -EnableShowFileExtensions -EnableShowFullPathInTitleBar
Disable-GameBarTips
Enable-RemoteDesktop

# Allow powershell execution where needed. 
Update-ExecutionPolicy Unrestricted

# Enable Chocolatey Autoconfirm
choco feature enable -n allowGlobalConfirmation

## Git
choco install git.install
choco install poshgit
choco install Git-Credential-Manager-for-Windows
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## Python
choco install python2
if (Test-PendingReboot) { Invoke-Reboot }
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## Node, npm
choco install nodejs.install
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## NPM Update
npm install -g npm-windows-upgrade
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## Yarn installation
choco install yarn
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## dot net
choco install dotnetcore
choco install dotnetcore-runtime
choco install dotnetcore-sdk
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## Editors
choco install visualstudiocode
choco install vscode-powershell
choco install vscode-gitlens
choco install vscode-gitattributes
choco install vscode-gitignore
choco install vscode-editorconfig
choco install vscode-csharp
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")

## Visual Studio 2013
choco install VisualStudio2013Professional -InstallArguments "/Features:'VC_MFC_Libraries'"

## Visual Studio 2015
mkdir c:\installtmp
(Invoke-WebRequest -UseBasicParsing -Uri https://raw.githubusercontent.com/sytone/windows-dev-setup/master/VS2015AdminDeployment.xml).Content > c:\installtmp\AdminDeployment.xml
choco install VisualStudio2015Enterprise -packageParameters "--AdminFile c:\installtmp\AdminDeployment.xml"

## Visual Studio 2017
choco install visualstudio2017enterprise
choco install visualstudio2017-workload-azure
choco install visualstudio2017-workload-manageddesktop
choco install visualstudio2017-workload-nativedesktop
choco install visualstudio2017-workload-netweb
if (Test-PendingReboot) { Invoke-Reboot }

## Basics
choco install GoogleChrome
choco install 7zip.install
choco install sysinternals
if (Test-PendingReboot) { Invoke-Reboot }

# Pinning Things
Install-ChocolateyPinnedTaskBarItem "$env:programfiles\Google\Chrome\Application\chrome.exe"

# Let's get Updates, too
Install-WindowsUpdate -acceptEula
